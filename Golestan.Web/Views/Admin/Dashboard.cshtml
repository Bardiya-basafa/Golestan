<!-- Modals -->
<!-- Add Course Modal -->
<div id="addCourseModal"
     class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md mx-4 animate-bounce-in">
        <div class="gradient-bg p-6 rounded-t-2xl">
            <div class="flex justify-between items-center">
                <h4 class="text-xl font-bold text-white">Add New Course</h4>
                <button onclick="hideModal('addCourseModal')" class="text-white/80 hover:text-white text-2xl">×</button>
            </div>
        </div>

        <form id="addCourseForm" class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Course Code</label>
                <input type="text" id="courseCode"
                       class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                       placeholder="e.g., CS101" required>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Course Name</label>
                <input type="text" id="courseName"
                       class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                       placeholder="e.g., Introduction to Programming" required>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Credits</label>
                <input type="number" id="courseCredits" min="1" max="6"
                       class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                       placeholder="3" required>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Prerequisites</label>
                <select id="coursePrerequisite"
                        class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                    <option value="">No Prerequisites</option>
                </select>
            </div>

            <div class="flex space-x-3 pt-4">
                <button type="submit"
                        class="flex-1 gradient-bg text-white py-3 rounded-xl hover:opacity-90 transition-all duration-200 font-semibold">
                    <i class="fas fa-plus mr-2"></i>Add Course
                </button>
                <button type="button" onclick="hideModal('addCourseModal')"
                        class="flex-1 bg-gray-100 text-gray-700 py-3 rounded-xl hover:bg-gray-200 transition-all duration-200 font-semibold">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Add Class Modal -->
<div id="addClassModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md mx-4 animate-bounce-in">
        <div class="bg-gradient-to-r from-green-500 to-teal-500 p-6 rounded-t-2xl">
            <div class="flex justify-between items-center">
                <h4 class="text-xl font-bold text-white">Add New Class</h4>
                <button onclick="hideModal('addClassModal')" class="text-white/80 hover:text-white text-2xl">×</button>
            </div>
        </div>

        <form id="addClassForm" class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Course</label>
                <select id="classCourse"
                        class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        required>
                    <option value="">Select Course</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Day of Week</label>
                <select id="classDay"
                        class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        required>
                    <option value="">Select Day</option>
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                </select>
            </div>

            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Start Time</label>
                    <input type="time" id="classStartTime"
                           class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                           required>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">End Time</label>
                    <input type="time" id="classEndTime"
                           class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                           required>
                </div>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Location</label>
                <input type="text" id="classLocation"
                       class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                       placeholder="e.g., Room 101" required>
            </div>

            <div class="flex space-x-3 pt-4">
                <button type="submit"
                        class="flex-1 bg-gradient-to-r from-green-500 to-teal-500 text-white py-3 rounded-xl hover:opacity-90 transition-all duration-200 font-semibold">
                    <i class="fas fa-plus mr-2"></i>Add Class
                </button>
                <button type="button" onclick="hideModal('addClassModal')"
                        class="flex-1 bg-gray-100 text-gray-700 py-3 rounded-xl hover:bg-gray-200 transition-all duration-200 font-semibold">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

