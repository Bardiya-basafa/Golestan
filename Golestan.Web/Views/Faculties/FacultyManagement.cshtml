@model Golestan.Application.DTOs.Faculty.FacultyDetailsDto

@{
    ViewData["Title"] = "Faculty Details";
}
<!-- Navigation -->
<nav class="glass-effect sticky top-0 z-50 border-b border-white/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
                    <i class="fas fa-university text-white text-lg"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                        UniManage Pro
                    </h1>
                    <p class="text-xs text-gray-500">Faculty Details</p>
                </div>
            </div>

            <div class="flex items-center space-x-4">
                <a asp-controller="Faculties" asp-action="Index"
                   class="px-4 py-2 rounded-lg text-sm font-medium text-gray-600 hover:text-indigo-600 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Faculty List
                </a>
            </div>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Faculty Header -->
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 mb-8 animate-fade-in">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex items-center mb-6 lg:mb-0">
                <div class="w-20 h-20 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-2xl flex items-center justify-center mr-6 shadow-lg">
                    <i class="fas fa-university text-white text-3xl"></i>
                </div>
                <div>
                    <h2 class="text-4xl font-bold text-gray-800 mb-2">@Model.MajorName</h2>
                    <p class="text-gray-600 text-lg">Description</p>
                    <div class="flex items-center mt-2 text-sm text-gray-500">
                        <i class="fas fa-calendar mr-2"></i>
                        Established: @Model.StartDate.ToShortDateString()
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-indigo-600">@Model.Id</div>
                    <div class="text-sm text-gray-500">Faculty ID</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-purple-600">@Model.Budget $</div>
                    <div class="text-sm text-gray-500">Badge Amount</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Faculty Information -->
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 mb-8 animate-scale-in">
        <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center mr-4">
                <i class="fas fa-info-circle text-white text-xl"></i>
            </div>
            <div>
                <h3 class="text-2xl font-bold text-gray-800">Faculty Information</h3>
                <p class="text-gray-600">Basic details and specifications</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-gradient-to-r from-indigo-100 to-purple-100 rounded-xl p-6 card-hover">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Faculty ID</p>
                        <p class="text-2xl font-bold text-indigo-600">@Model.Id</p>
                    </div>
                    <div class="w-12 h-12 bg-indigo-500 rounded-xl flex items-center justify-center">
                        <i class="fas fa-hashtag text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-gradient-to-r from-green-100 to-teal-100 rounded-xl p-6 card-hover">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Building</p>
                        <p class="text-xl font-bold text-green-600">@Model.BuildingName</p>
                    </div>
                    <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
                        <i class="fas fa-building text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-gradient-to-r from-purple-100 to-pink-100 rounded-xl p-6 card-hover">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Major</p>
                        <p class="text-xl font-bold text-purple-600">@Model.MajorName</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center">
                        <i class="fas fa-graduation-cap text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-gradient-to-r from-orange-100 to-red-100 rounded-xl p-6 card-hover">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Budget</p>
                        <p class="text-xl font-bold text-orange-600">@Model.Budget $</p>
                    </div>
                    <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center">
                        <i class="fas fa-id-badge text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8 animate-slide-up">
        <div class="stat-card rounded-2xl p-6 shadow-lg border border-white/20 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Students</p>
                    <p class="text-3xl font-bold text-blue-600">@Model.StudentsCount</p>
                    <p class="text-xs text-gray-500 mt-1">Active enrollments</p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <i class="fas fa-user-graduate text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <a asp-controller="Admin" asp-action="InstructorManagement"  class="stat-card rounded-2xl p-6 shadow-lg border border-white/20 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Instructors</p>
                    <p class="text-3xl font-bold text-green-600">@Model.InstructorsCount</p>
                    <p class="text-xs text-gray-500 mt-1">Faculty Instructors</p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                    <i class="fas fa-chalkboard-teacher text-green-600 text-xl"></i>
                </div>
            </div>
        </a>

        <a asp-controller="Admin" asp-action="CourseManagement" asp-route-facultyId="@Model.Id" class="stat-card rounded-2xl p-6 shadow-lg border border-white/20 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Courses</p>
                    <p class="text-3xl font-bold text-purple-600">@Model.CoursesCount</p>
                    <p class="text-xs text-gray-500 mt-1">Available programs</p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                    <i class="fas fa-book text-purple-600 text-xl"></i>
                </div>
            </div>
        </a>

        <a asp-controller="Admin" asp-action="ClassroomManagement" asp-route-facultyId="@Model.Id" class="stat-card rounded-2xl p-6 shadow-lg border border-white/20 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Classrooms</p>
                    <p class="text-3xl font-bold text-orange-600">@Model.ClassesCount</p>
                    <p class="text-xs text-gray-500 mt-1">Learning spaces</p>
                </div>
                <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                    <i class="fas fa-door-open text-orange-600 text-xl"></i>
                </div>
            </div>
        </a>
    </div>

    
</div>