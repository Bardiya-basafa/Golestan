@model List<FacultyDetailsDto>
@{
    ViewData["Title"] = "Faculty Management";
}
<!-- Main Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header Section -->
    <div class="mb-12 animate-fade-in">
        <div class="bg-white rounded-3xl shadow-xl border border-slate-200 p-8 mb-8">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="mb-6 lg:mb-0">
                    <div class="flex items-center mb-4">
                        <div class="w-16 h-16 bg-gradient-to-r from-slate-700 to-slate-900 rounded-2xl flex items-center justify-center shadow-lg mr-6">
                            <i class="fas fa-university text-white text-2xl"></i>
                        </div>
                        <div>
                            <h2 class="text-4xl font-bold text-slate-800 mb-2">Faculty Management</h2>
                            <p class="text-slate-600 text-lg font-medium">Comprehensive university faculty administration</p>
                        </div>
                    </div>
                </div>
                <div class="flex space-x-4">
                    <a asp-controller="Admin" asp-action="Index"
                       class="flex items-center px-8 py-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-xl transition-all duration-200 shadow-lg border border-slate-200 font-semibold">
                        Back to Admin
                    </a>
                    <a asp-controller="Faculties" asp-action="AddFaculty"
                       class="flex items-center px-8 py-4 bg-gradient-to-r from-slate-700 to-slate-900 text-white rounded-xl hover:from-slate-800 hover:to-slate-950 transition-all duration-200 shadow-xl font-semibold">
                        <i class="fas fa-plus mr-3"></i>
                        Add New Faculty
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12 animate-slide-up">
        <div class="bg-white rounded-2xl p-8 shadow-xl border border-slate-200 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-2">Total Faculties</p>
                    <p class="text-3xl font-bold text-slate-800">@Model.Count</p>
                    <p class="text-xs text-slate-500 mt-1">Academic divisions</p>
                </div>
                <div class="w-14 h-14 bg-slate-100 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-university text-slate-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-xl border border-slate-200 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-2">Total Students</p>
                    <p class="text-3xl font-bold text-slate-800">@Model.Sum(f => f.StudentsCount)</p>
                    <p class="text-xs text-slate-500 mt-1">Enrolled students</p>
                </div>
                <div class="w-14 h-14 bg-blue-100 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-user-graduate text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-xl border border-slate-200 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-2">Total Budget</p>
                    <p class="text-3xl font-bold text-slate-800">$@Model.Sum(f => f.Budget).ToString("N0")</p>
                    <p class="text-xs text-slate-500 mt-1">Annual allocation</p>
                </div>
                <div class="w-14 h-14 bg-emerald-100 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-emerald-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-xl border border-slate-200 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-2">Avg. Established</p>
                    <p class="text-3xl font-bold text-slate-800">@(Model.Count > 0 ? Math.Round(Model.Average(f => DateTime.Now.Year - f.StartDate.Year)) : 0)</p>
                    <p class="text-xs text-slate-500 mt-1">Years ago</p>
                </div>
                <div class="w-14 h-14 bg-amber-100 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-calendar text-amber-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Faculty Table -->
    <div class="bg-white rounded-2xl shadow-xl border border-slate-200 overflow-hidden animate-fade-in">
        <div class="bg-gradient-to-r from-slate-700 to-slate-900 p-8">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-3xl font-bold text-white mb-3">Faculty Directory</p>
                </div>
            </div>
        </div>

        <div class="p-8">
            @if ( Model.Count > 0)
            {
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b-2 border-slate-200">
                                <th class="text-left py-6 px-8 font-bold text-slate-700 uppercase tracking-wider">
                                    Building
                                </th>
                                <th class="text-left py-6 px-8 font-bold text-slate-700 uppercase tracking-wider">
                                    Faculty Name
                                </th>
                                <th class="text-left py-6 px-8 font-bold text-slate-700 uppercase tracking-wider">
                                    Establishment Date
                                </th>
                                <th class="text-left py-6 px-8 font-bold text-slate-700 uppercase tracking-wider">
                                    Students
                                </th>
                                <th class="text-left py-6 px-8 font-bold text-slate-700 uppercase tracking-wider">
                                    Budget Allocation
                                </th>
                                <th class="text-center py-6 px-8 font-bold text-slate-700 uppercase tracking-wider">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            @foreach (var faculty in Model)
                            {
                                <tr class="table-row-hover transition-all duration-200">
                                    <td class="py-8 px-8">
                                        <div class="flex items-center">
                                           
                                            <div>
                                                <div class="text-lg font-bold text-slate-800 mb-1">@faculty.BuildingName</div>
                                                <div class="text-sm text-slate-500">ID: #@faculty.Id</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-8 px-8">
                                        <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-bold bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 border border-blue-300">
                                            @faculty.MajorName
                                        </span>
                                    </td>
                                    <td class="py-8 px-8">
                                        <div>
                                            <div class="text-sm font-bold text-slate-800">@faculty.StartDate.ToString("MMM dd, yyyy")</div>
                                            <div class="text-xs text-slate-500">@(DateTime.Now.Year - faculty.StartDate.Year) years ago</div>
                                        </div>
                                    </td>
                                    <td class="py-8 px-8">
                                        <div>
                                            <div class="text-lg font-bold text-slate-800">@faculty.StudentsCount.ToString("N0")</div>
                                            <div class="text-xs text-slate-500">enrolled students</div>
                                        </div>
                                    </td>
                                    <td class="py-8 px-8">
                                        <div>
                                            <div class="text-lg font-bold text-slate-800">$@faculty.Budget.ToString("N0")</div>
                                            <div class="text-xs text-slate-500">annual budget</div>
                                        </div>
                                    </td>
                                    <td class="py-8 px-8">
                                        <div class="flex items-center justify-center space-x-3">
                                            <a asp-controller="Faculties" asp-action="FacultyManagement" asp-route-id="@faculty.Id"
                                               class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-all duration-200 font-medium">
                                                View
                                            </a>
                                            <a asp-controller="Faculties" asp-action="EditFaculty" asp-route-id="@faculty.Id"
                                               class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-all duration-200 font-medium">
                                                Edit
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-20">
                    <div class="w-32 h-32 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-8">
                        <i class="fas fa-university text-slate-400 text-4xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-slate-700 mb-4">No Faculties Found</h3>
                    <p class="text-slate-500 text-lg mb-8 max-w-md mx-auto">Start building your academic structure by adding your first faculty to the system.</p>
                    <a asp-controller="Faculties" asp-action="AddFaculty"
                       class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-slate-700 to-slate-900 text-white rounded-xl hover:from-slate-800 hover:to-slate-950 transition-all duration-200 shadow-xl font-semibold">
                        <i class="fas fa-plus mr-3"></i>
                        Add First Faculty
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    <div class="flex justify-between items-center mt-12 animate-fade-in">
        <div class="text-sm font-medium text-slate-600 bg-white px-6 py-3 rounded-xl border border-slate-200">
            Showing <span class="font-bold text-slate-800">1</span> to <span class="font-bold text-slate-800">@Model.Count</span> of <span class="font-bold text-slate-800">@Model.Count</span> results
        </div>
        <div class="flex space-x-2">
            <button class="px-6 py-3 bg-white border border-slate-300 text-slate-600 rounded-xl hover:bg-slate-50 transition-all duration-200 font-medium">
                Previous
            </button>
            <button class="px-6 py-3 bg-slate-700 text-white rounded-xl hover:bg-slate-800 transition-all duration-200 font-medium">
                1
            </button>
            <button class="px-6 py-3 bg-white border border-slate-300 text-slate-600 rounded-xl hover:bg-slate-50 transition-all duration-200 font-medium">
                Next
            </button>
        </div>
    </div>

    <!-- Back Navigation -->
    <div class="mt-12 text-center">
        <a asp-controller="Admin" asp-action="Index" 
           class="inline-flex items-center text-slate-600 hover:text-slate-800 transition-colors group font-semibold text-lg">
            <svg class="w-6 h-6 mr-3 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Return to Administrative Dashboard
        </a>
    </div>
</div>