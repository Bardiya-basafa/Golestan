                                                                                        <a asp-controller="Instructors" asp-action="EditInstructorDetails" asp-route-id="@instructor.Id" class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-all duration-200 font-medium"> Edit </a>
                                                                                        <button data-instructor-id="@instructor.Id" data-instructor-fullname="@instructor.FullName" class="remove-instructor px-4 py-2 bg-red-600 hover:!bg-red-800 text-white rounded-lg transition-all duration-200 font-medium"> Remove</button>
                                                                                </div>
                                                                        </td>
                                                                </tr>
                                                        }
