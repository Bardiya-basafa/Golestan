@model CourseManagementDto

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
    <div class="container mx-auto px-6 py-12">
        <!-- Enhanced Header Section -->
        <div class="bg-white rounded-2xl shadow-xl border border-slate-200 mb-8 overflow-hidden">
            <div class="bg-gradient-to-r from-slate-800 to-slate-900 px-8 py-6">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-3xl shadow font-bold text-white mb-2"><strong>@Model.FacultyName</strong> Courses
                        </p>
                        <p class="text-slate-300 text-lg">Comprehensive academic course administration</p>
                    </div>
                    <a asp-controller="Courses" asp-action="AddCourse" asp-route-facultyId="@Model.FacultyId" class="group">
                        <div class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl font-semibold transition-all duration-300 flex items-center shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                            <svg class="w-5 h-5 mr-3 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            Add New Course
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <!-- Enhanced Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
            <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="p-4 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg mb-4 justify-center flex">
                            <svg class="w-8 h-8 !text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                        </div>
                        <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Total Courses</p>
                        <p class="text-3xl font-bold text-slate-900">@Model.Courses.Count</p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="p-4 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl shadow-lg mb-4 justify-center flex">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                            </svg>
                        </div>
                        <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Total Units</p>
                        <p class="text-3xl font-bold text-slate-900">@Model.Courses.Sum(c => c.Unit)</p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="p-4 bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl shadow-lg mb-4 justify-center flex">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Upcoming Exams</p>
                        <p class="text-3xl font-bold text-slate-900">@Model.Courses.Count(c => c.ExamTime > DateTime.Now)</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Enhanced Course Table -->
        <div class="bg-white rounded-2xl shadow-xl border border-slate-200 overflow-hidden">
            <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-8 py-6 border-b border-slate-200">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold text-slate-900">Course Directory</h2>
                        <p class="text-slate-600 mt-1">Manage academic courses and curriculum</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                            @Model.Courses.Count Total
                        </span>
                    </div>
                </div>
            </div>

            @if (Model.Courses.Count > 0){
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-slate-200">
                        <thead class="bg-slate-50">
                            <tr>
                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                    Course ID
                                </th>
                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                    Course Name
                                </th>
                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                    Units
                                </th>
                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                    Exam Date
                                </th>
                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                    Management
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-slate-100">
                            @foreach (var course in Model.Courses){
                                <tr class="hover:bg-slate-50 transition-all duration-200 group">
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-br from-slate-600 to-slate-700 rounded-xl flex items-center justify-center shadow-lg">
                                                <span class="text-white font-bold text-lg">#</span>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-lg font-bold text-slate-900">@course.Id</div>
                                                <div class="text-sm text-slate-500">Course Code</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 shadow-sm">
                                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                                </svg>
                                                @course.Name
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="text-2xl font-bold text-slate-900">@course.Unit</div>
                                            <div class="ml-2 text-sm text-slate-500">units</div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="text-sm font-semibold text-slate-900">@course.ExamTime.ToString("f")</div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <a asp-controller="Courses" asp-action="CourseActions" asp-route-courseId="@course.Id" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 group">
                                          
                                            Manage
                                            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </a>
                                        <button data-course-id="@course.Id" data-course-name="@course.Name"  class="remove-course px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-all duration-200 font-medium">Remove</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else{
                <div class="text-center py-16">
                    <div class="mx-auto h-24 w-24 bg-slate-100 rounded-full flex items-center justify-center mb-6">
                        <svg class="h-12 w-12 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-slate-900 mb-2">No Courses Found</h3>
                    <p class="text-slate-600 mb-8 max-w-md mx-auto">Get started by adding your first course to begin building your academic curriculum.</p>
                    <a asp-controller="Courses" asp-action="AddCourse" asp-route-facultyId="@Model.FacultyId" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Add First Course </a>
                </div>
            }
        </div>
        <!-- Enhanced Pagination -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 px-8 py-6 mt-8">
            <div class="flex items-center justify-between">
                <div class="flex-1 flex justify-between sm:hidden">
                    <a href="#" class="relative inline-flex items-center px-6 py-3 border border-slate-300 text-sm font-semibold rounded-xl text-slate-700 bg-white hover:bg-slate-50 transition-all duration-200">Previous</a>
                    <a href="#" class="ml-3 relative inline-flex items-center px-6 py-3 border border-slate-300 text-sm font-semibold rounded-xl text-slate-700 bg-white hover:bg-slate-50 transition-all duration-200">Next</a>
                </div>
                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-700">
                            Showing <span class="font-bold text-slate-900">1</span> to
                            <span class="font-bold text-slate-900">@Model.Courses.Count</span> of
                            <span class="font-bold text-slate-900">@Model.Courses.Count</span> results </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-xl shadow-sm -space-x-px" aria-label="Pagination">
                            <a href="#" class="relative inline-flex items-center px-4 py-3 rounded-l-xl border border-slate-300 bg-white text-sm font-semibold text-slate-500 hover:bg-slate-50 transition-all duration-200">
                                <span class="sr-only">Previous</span>
                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                            <a href="#" class="relative inline-flex items-center px-6 py-3 border border-slate-300 bg-blue-50 text-sm font-bold text-blue-600 hover:bg-blue-100 transition-all duration-200">1</a>
                            <a href="#" class="relative inline-flex items-center px-4 py-3 rounded-r-xl border border-slate-300 bg-white text-sm font-semibold text-slate-500 hover:bg-slate-50 transition-all duration-200">
                                <span class="sr-only">Next</span>
                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Remove Confirmation Modal -->
<div id="confirmRemoveCourseModal" class="fixed z-50 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <form id="removeCourse" asp-controller="Courses" asp-action="RemoveCourse">
        @Html.AntiForgeryToken()
        <input type="hidden" name="courseId" id="courseId" value=""/>
        <input type="hidden" name="facultyId" value="@Model.FacultyId"/>
    </form>
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <!-- Background overlay -->
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
        <!-- Modal panel -->
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                        <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                            Remove Classroom </h3>
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">
                                Are you sure you want to remove
                                <span id="courseName" class="font-medium"></span> from this faculty? </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="button" id="confirmRemoveCourseModalBtn" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                    Remove
                </button>
                <button type="button" id="cancelRemoveCourseBtn" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    // Modal functionality
    const confirmRemoveCourseModal = document.getElementById('confirmRemoveCourseModal');
    const confirmRemoveCourseModalBtn = document.getElementById('confirmRemoveCourseModalBtn');
    const cancelRemoveCourseBtn = document.getElementById('cancelRemoveCourseBtn');
    const courseName = document.getElementById('courseName');

    let currentStudentToRemove = null;

    // Function to open the modal
    function openRemoveModal(courseId, courseName) {
        currentStudentToRemove = courseId;
        courseName.textContent = courseName;
        confirmRemoveCourseModal.classList.remove('hidden');
        document.body.classList.add('overflow-hidden');
    }

    // Function to close the modal
    function closeRemoveModal() {
        confirmRemoveCourseModal.classList.add('hidden');
        document.body.classList.remove('overflow-hidden');
        currentStudentToRemove = null;
    }

    // Event listeners for modal buttons
    confirmRemoveCourseModalBtn.addEventListener('click', function () {
        if (currentStudentToRemove) {
            console.log(currentStudentToRemove)
            removeStudent(currentStudentToRemove);

        }
        closeRemoveModal();
    });

    cancelRemoveCourseBtn.addEventListener('click', closeRemoveModal);

    // Close modal when clicking outside
    confirmRemoveCourseModal.addEventListener('click', function (e) {
        if (e.target === confirmRemoveCourseModal) {
            closeRemoveModal();
        }
    });

    // Function to handle student removal
    async function removeStudent(courseId) {
        document.getElementById('courseId').value = courseId;
        document.getElementById('removeCourse').submit();

    }

    // Update your existing remove button event listeners
    document.addEventListener('click', function (e) {
        if (e.target.closest('.remove-course')) {
            e.preventDefault();
            const button = e.target.closest('.remove-course');
            const courseId = button.getAttribute('data-course-id');
            const courseName = button.getAttribute('data-course-name');
            console.log(courseId, courseName)
            openRemoveModal(courseId, courseName);
        }
    });
</script>