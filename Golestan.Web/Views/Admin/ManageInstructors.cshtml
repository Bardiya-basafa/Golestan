                                        <div>
                                                <p class="text-sm font-medium text-gray-600">Average Salary</p>
                                                <p class="text-3xl font-bold text-emerald-600">$@(Model.Count > 0 ? Model.Average(i => i.Salary).ToString("N0") : "0")</p>
