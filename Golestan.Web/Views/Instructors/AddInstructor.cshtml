@model AddInstructorDto

@{
        ViewData["Title"] = "Add New Instructor";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl w-full space-y-8">
                <!-- Header -->
                <div class="text-center">
                        <div class="mx-auto h-16 w-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                        </div>
                        <h2 class="mt-6 text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
                                Add New Instructor
                        </h2>
                        <p class="mt-3 text-lg text-gray-600">Create a new instructor profile with complete details</p>
                </div>

                <!-- Form Card -->
                <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                        <div class="px-8 py-6 bg-gradient-to-r from-blue-500 to-purple-600">
                                <h3 class="text-xl font-semibold text-white">Instructor Information</h3>
                                <p class="text-blue-100 mt-1">Please fill in all required fields</p>
                        </div>

                        <form class="px-8 py-8 space-y-6" asp-controller="Instructors" asp-action="AddInstructor"
                              method="post">
                                @Html.AntiForgeryToken()
                                <div class="ml-3">
                                        <h3 class="text-lg font-medium text-red-800">Please correct the
                                                following errors:</h3>
                                        <div class="mt-3 text-sm text-red-700" asp-validation-summary="All">
                                        </div>
                                </div>

                                <!-- Personal Information Section -->
                                <div class="space-y-6">
                                        <div class="border-l-4 border-blue-500 pl-4">
                                                <h4 class="text-lg font-semibold text-gray-900 mb-4">Personal
                                                        Information</h4>
                                        </div>

                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                                <!-- First Name -->
                                                <div class="group">
                                                        <label asp-for="FirstName"
                                                               class="block text-sm font-medium text-gray-700 mb-2">
                                                                First Name <span class="text-red-500">*</span>
                                                        </label>
                                                        <div class="relative">
                                                                <input type="text"
                                                                       asp-for="FirstName"
                                                                       placeholder="Enter first name"
                                                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                                       required>
                                                                <span asp-validation-for="FirstName"
                                                                      class="text-red-600"></span>


                                                        </div>


                                                </div>

                                                <!-- Last Name -->
                                                <div class="group">
                                                        <label asp-for="LastName"
                                                               class="block text-sm font-medium text-gray-700 mb-2">
                                                                Last Name <span class="text-red-500">*</span>
                                                        </label>
                                                        <div class="relative">
                                                                <input type="text"
                                                                       asp-for="LastName"
                                                                       placeholder="Enter last name"
                                                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                                       required>
                                                                <span asp-validation-for="LastName"
                                                                      class="error-message"></span>


                                                        </div>

                                                </div>
                                        </div>

                                        <!-- Email -->
                                        <div class="group">
                                                <label asp-for="Email"
                                                       class="block text-sm font-medium text-gray-700 mb-2">
                                                        Email Address <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative">
                                                        <input type="email"
                                                               asp-for="Email"
                                                               placeholder="instructor@university.edu"
                                                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                               required>
                                                        <span asp-validation-for="Email"
                                                              class="error-message"></span>


                                                </div>

                                        </div>

                                        <!-- Password -->
                                        <div class="group">
                                                <label asp-for="Password"
                                                       class="block text-sm font-medium text-gray-700 mb-2">
                                                        Password <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative">
                                                        <input type="password"
                                                               asp-for="Password"
                                                               placeholder="Enter secure password"
                                                               minlength="6"
                                                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                               required>
                                                        <span asp-validation-for="Password"
                                                              class="error-message"></span>


                                                </div>
                                                <p class="text-xs text-gray-500 mt-1">Password must be at least 8,
                                                        Contains digits and letters, Contains special character
                                                        characters long</p>

                                        </div>
                                        <!-- Confirm Password -->
                                        <div class="group">
                                                <label asp-for="ConfirmPassword"
                                                       class="block text-sm font-medium text-gray-700 mb-2">
                                                        Confirm Password <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative">
                                                        <input type="password"
                                                               asp-for="ConfirmPassword"
                                                               placeholder="Confirm your password"
                                                               minlength="6"
                                                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                               required>
                                                        <span asp-validation-for="ConfirmPassword"
                                                              class="text-red-500 text-sm mt-1 block"></span>
                                                </div>
                                                <p class="text-xs text-gray-500 mt-1">Password must be at least 6
                                                        characters long</p>

                                        </div>
                                </div>

                                <!-- Employment Information Section -->
                                <div class="space-y-6 pt-6 border-t border-gray-200">
                                        <div class="border-l-4 border-purple-500 pl-4">
                                                <h4 class="text-lg font-semibold text-gray-900 mb-4">Employment
                                                        Information</h4>
                                        </div>

                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                                <!-- Hire Date -->
                                                <div class="group">
                                                        <label asp-for="HireDate"
                                                               class="block text-sm font-medium text-gray-700 mb-2">
                                                                Hire Date <span class="text-red-500">*</span>
                                                        </label>
                                                        <div class="relative">
                                                                <input type="date"
                                                                       asp-for="HireDate"
                                                                       value="@DateTime.Now.ToString("yyyy-MM-dd")"
                                                                       class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                                       required>
                                                                <span asp-validation-for="HireDate"
                                                                      class="error-message"></span>
                                                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                                </div>

                                                        </div>

                                                </div>

                                                <!-- Salary -->
                                                <div class="group">
                                                        <label asp-for="Salary"
                                                               class="block text-sm font-medium text-gray-700 mb-2">
                                                                Annual Salary <span class="text-red-500">*</span>
                                                        </label>
                                                        <div class="relative">
                                                                <input type="number"
                                                                       asp-for="Salary"
                                                                       min="100"
                                                                       step="100"
                                                                       placeholder="50000"
                                                                       class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400"
                                                                       required>
                                                                <span asp-validation-for="Salary"
                                                                      class="error-message"></span>

                                                        </div>
                                                        <p class="text-xs text-gray-500 mt-1">Enter annual salary in
                                                                USD</p>

                                                </div>

                                        </div>

                                        <!-- Faculty -->
                                        <div class="group">
                                                <label asp-for="FacultyId"
                                                       class="block text-sm font-medium text-gray-700 mb-2">
                                                        Faculty Department <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative">
                                                        <select asp-for="FacultyId"
                                                                class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 group-hover:border-gray-400 appearance-none bg-white"
                                                                required>
                                                                <option value="">Select a faculty department</option>
                                                                @if (@Model.FacultyOptions != null){
                                                                        @foreach (var faculty in @Model.FacultyOptions){
                                                                                <option value="@faculty.Key">
                                                                                        #@faculty.Key @faculty.Value
                                                                                </option>
                                                                        }
                                                                }
                                                        </select>
                                                        <span asp-validation-for="FacultyId"
                                                              class="error-message"></span>


                                                </div>
                                        </div>
                                </div>
                                <!-- Action Buttons -->
                                <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">

                                        <button type="submit"
                                                class="flex-1 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                                <span class="flex items-center justify-center">
                                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                      stroke-width="2"
                                                                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                        </svg>
                                                        Create Instructor
                                                </span>
                                        </button>
                                        <button type="reset"
                                                class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 text-center focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                                        <span class="flex items-center justify-center">
                                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                      stroke-width="2"
                                                                      d="M6 18L18 6M6 6l12 12"></path>
                                                        </svg>
                                                        Reset Form
                                                </span>
                                        </button>
                                </div>

                                <!-- Back Link -->
                                <div class="text-center pt-4">
                                        <a asp-controller="Admin" asp-action="InstructorsManagement"
                                           class="inline-flex items-center text-sm text-blue-600 hover:text-blue-500 transition-colors group">
                                                <svg class="w-4 h-4 mr-1 group-hover:-translate-x-1 transition-transform"
                                                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                                                </svg>
                                                Back to Instructor List
                                        </a>
                                </div>
                        </form>
                </div>


        </div>
</div>