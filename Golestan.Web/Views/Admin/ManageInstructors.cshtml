                                                                                <div class="flex items-center">
                                                                                        <div class="ml-3">
                                                                                                <div class="text-sm font-semibold text-slate-900">@instructor.HireDate.ToString("MMM dd, yyyy")</div>
                                                                                                <div class="text-xs text-slate-500">
                                                                                                        @{
                                                                                                                var yearsEmployed = DateTime.Now.Year - instructor.HireDate.Year;
                                                                                                        }
                                                                                                        @yearsEmployed years employed
                                                                                                </div>
                                                                                        </div>
                                                                                </div>
                                                                        </td>
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                                                                <div class="flex items-center">
                                                                                        <div class="ml-3">
                                                                                                <div class="text-lg font-bold text-slate-900">$@instructor.Salary.ToString("N0")</div>
                                                                                                <div class="text-xs text-slate-500">Annual Salary</div>
                                                                                        </div>
                                                                                </div>
                                                                        </td>
