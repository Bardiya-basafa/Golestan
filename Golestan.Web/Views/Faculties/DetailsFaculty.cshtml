@{
    ViewData["Title"] = "Faculty Details";
}
<!-- Navigation -->
<nav class="glass-effect sticky top-0 z-50 border-b border-white/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
                    <i class="fas fa-university text-white text-lg"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                        UniManage Pro
                    </h1>
                    <p class="text-xs text-gray-500">Faculty Details</p>
                </div>
            </div>

            <div class="flex items-center space-x-4">
                <a asp-controller="Faculties" asp-action="Index"
                   class="px-4 py-2 rounded-lg text-sm font-medium text-gray-600 hover:text-indigo-600 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Faculty List
                </a>
            </div>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Faculty Header -->
    <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 mb-8 animate-fade-in">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex items-center mb-6 lg:mb-0">
                <div class="w-20 h-20 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-2xl flex items-center justify-center mr-6 shadow-lg">
                    <i class="fas fa-university text-white text-3xl"></i>
                </div>
                <div>
                    <h2 class="text-4xl font-bold text-gray-800 mb-2">@Model.MajorName</h2>
                    <p class="text-gray-600 text-lg">Description</p>
                    <div class="flex items-center mt-2 text-sm text-gray-500">
                        <i class="fas fa-calendar mr-2"></i>
                        Established: @Model.StartDate.ToShortDateString()
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-indigo-600">@Model.Id</div>
                    <div class="text-sm text-gray-500">Faculty ID</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-purple-600">@Model.Budget $</div>
                    <div class="text-sm text-gray-500">Badge Amount</div>
                </div>
            </div>
