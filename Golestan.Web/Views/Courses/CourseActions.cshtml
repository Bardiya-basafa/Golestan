<!-- Remove Confirmation Modal -->
<div id="confirmRemoveCourseInstructorModal" class="fixed z-50 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <form id="removeCourseInstructor" asp-controller="Instructors" asp-action="RemoveCourseInstructor">
                @Html.AntiForgeryToken()
                <input type="hidden" name="instructorId" id="instructorId" value=""/>
                <input type="hidden" name="courseId" value="@Model.CourseId"/>
        </form>
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                <!-- Background overlay -->
                <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                <!-- Modal panel -->
                <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                                <div class="sm:flex sm:items-start">
                                        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                                                <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                                </svg>
                                        </div>
                                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                                                <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                                        Remove Classroom </h3>
                                                <div class="mt-2">
                                                        <p class="text-sm text-gray-500">
                                                                Are you sure you want to remove
                                                                <span id="instructorFullName" class="font-medium"></span> from this course?
                                                        </p>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                                <button type="button" id="confirmRemoveCourseInstructorBtn" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                                        Remove
                                </button>
                                <button type="button" id="cancelRemoveCourseInstructorBtn" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                                        Cancel
                                </button>
                        </div>
                </div>
        </div>
</div>
<script>
        // Modal functionality
        const confirmRemoveCourseInstructorModal = document.getElementById('confirmRemoveCourseInstructorModal');
        const confirmRemoveCourseInstructorBtn = document.getElementById('confirmRemoveCourseInstructorBtn');
        const cancelRemoveCourseInstructorBtn = document.getElementById('cancelRemoveCourseInstructorBtn');
        const instructorFullName = document.getElementById('instructorFullName');

        let currentStudentToRemove = null;

        // Function to open the modal
        function openRemoveModal(instructorId, instructorName) {
                currentStudentToRemove = instructorId;
                instructorFullName.textContent = instructorName;
                confirmRemoveCourseInstructorModal.classList.remove('hidden');
                document.body.classList.add('overflow-hidden');
        }

        // Function to close the modal
        function closeRemoveModal() {
                confirmRemoveCourseInstructorModal.classList.add('hidden');
                document.body.classList.remove('overflow-hidden');
                currentStudentToRemove = null;
        }

        // Event listeners for modal buttons
        confirmRemoveCourseInstructorBtn.addEventListener('click', function () {
                if (currentStudentToRemove) {
                        console.log(currentStudentToRemove)
                        removeStudent(currentStudentToRemove);

                }
                closeRemoveModal();
        });

        cancelRemoveCourseInstructorBtn.addEventListener('click', closeRemoveModal);

        // Close modal when clicking outside
        confirmRemoveCourseInstructorModal.addEventListener('click', function (e) {
                if (e.target === confirmRemoveCourseInstructorModal) {
                        closeRemoveModal();
                }
        });

        // Function to handle student removal
        async function removeStudent(instructorId) {
                document.getElementById('instructorId').value = instructorId;
                document.getElementById('removeCourseInstructor').submit();

        }

        // Update your existing remove button event listeners
        document.addEventListener('click', function (e) {
                if (e.target.closest('.remove-course-instructor')) {
                        e.preventDefault();
                        const button = e.target.closest('.remove-course-instructor');
                        const instructorId = button.getAttribute('data-instructor-id');
                        const instructorFullName = button.getAttribute('data-instructor-fullname');
                        console.log(instructorId, instructorFullName)
                        openRemoveModal(instructorId, instructorFullName);
                }
        });
</script>