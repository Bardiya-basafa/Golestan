@model List<CoursesDto>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
        <div class="container mx-auto px-6 py-12">
                <!-- Enhanced Header Section -->
                <div class="bg-white rounded-2xl shadow-xl border border-slate-200 mb-8 overflow-hidden">
                        <div class="bg-gradient-to-r from-slate-800 to-slate-900 px-8 py-6">
                                <div class="flex justify-between items-center">
                                        <div>
                                                <h1 class="text-3xl font-bold text-white mb-2">Course Management System</h1>
                                                <p class="text-slate-300 text-lg">Comprehensive academic course administration</p>
                                        </div>
                                        <a asp-controller="Courses" asp-action="AddCourse" class="group">
                                                <div class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-semibold transition-all duration-300 flex items-center shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                                        <svg class="w-5 h-5 mr-3 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                                        </svg>
                                                        Add New Course
                                                </div>
                                        </a>
                                </div>
                        </div>
                </div>
                <!-- Enhanced Statistics Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
                        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                <div class="flex items-center justify-between">
                                        <div>
                                                <div class="p-4 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl shadow-lg mb-4">
                                                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                                        </svg>
                                                </div>
                                                <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Total Courses</p>
                                                <p class="text-3xl font-bold text-slate-900">@Model.Count</p>
                                        </div>
                                </div>
                        </div>
                        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                <div class="flex items-center justify-between">
                                        <div>
                                                <div class="p-4 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl shadow-lg mb-4">
                                                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                                        </svg>
                                                </div>
                                                <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Total Units</p>
                                                <p class="text-3xl font-bold text-slate-900">@Model.Sum(c => c.Unit)</p>
                                        </div>
                                </div>
                        </div>
                        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                <div class="flex items-center justify-between">
                                        <div>
                                                <div class="p-4 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl shadow-lg mb-4">
                                                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                                        </svg>
                                                </div>
                                                <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Active Sections</p>
                                                <p class="text-3xl font-bold text-slate-900"></p>
                                        </div>
                                </div>
                        </div>
                        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                <div class="flex items-center justify-between">
                                        <div>
                                                <div class="p-4 bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl shadow-lg mb-4">
                                                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                                        </svg>
                                                </div>
                                                <p class="text-sm font-semibold text-slate-600 uppercase tracking-wider mb-1">Avg Units</p>
                                                <p class="text-3xl font-bold text-slate-900">@(Model.Count > 0 ? Math.Round((double)Model.Sum(c => c.Unit) / Model.Count, 1) : 0)</p>
                                        </div>
                                </div>
                        </div>
                </div>
                <!-- Enhanced Course Table -->
                <div class="bg-white rounded-2xl shadow-xl border border-slate-200 overflow-hidden">
                        <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-8 py-6 border-b border-slate-200">
                                <div class="flex items-center justify-between">
                                        <div>
                                                <h2 class="text-2xl font-bold text-slate-900">Course Directory</h2>
                                                <p class="text-slate-600 mt-1">Manage academic courses and curriculum</p>
                                        </div>
                                        <div class="flex items-center space-x-2">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                            @Model.Count Courses
                        </span>
                                        </div>
                                </div>
                        </div>

                        @if (Model.Count > 0){
                                <div class="overflow-x-auto">
                                        <table class="min-w-full divide-y divide-slate-200">
                                                <thead class="bg-slate-50">
                                                        <tr>
                                                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                                                        Course Info
                                                                </th>
                                                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                                                        Faculty
                                                                </th>
                                                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                                                        Units
                                                                </th>
                                                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                                                        Exam Schedule
                                                                </th>
                                                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                                                        Sections
                                                                </th>
                                                                <th scope="col" class="px-8 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                                                                        Management
                                                                </th>
                                                        </tr>
                                                </thead>
                                                <tbody class="bg-white divide-y divide-slate-100">
                                                        @foreach (var course in Model){
                                                                <tr class="hover:bg-slate-50 transition-all duration-200 group">
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                                                                <div class="flex items-center">
                                                                                        <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-xl flex items-center justify-center shadow-lg">
                                                                                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                                                                                </svg>
                                                                                        </div>
                                                                                        <div class="ml-4">
                                                                                                <div class="text-lg font-bold text-slate-900">@course.Name</div>
                                                                                                <div class="text-sm text-slate-500">ID: @course.Id</div>
                                                                                                @if (!string.IsNullOrEmpty(course.Description)){
                                                                                                        <div class="text-xs text-slate-400 mt-1 max-w-xs truncate">@course.Description</div>
                                                                                                }
                                                                                        </div>
                                                                                </div>
                                                                        </td>
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                        <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold bg-gradient-to-r from-purple-100 to-purple-200 text-purple-800 shadow-sm border border-purple-200">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                            </svg>
                                                @course.FacultyName
                                        </span>
                                                                        </td>
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                                                                <div class="flex items-center">
                                                                                        <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-emerald-100 to-emerald-200 rounded-xl border border-emerald-300">
                                                                                                <span class="text-2xl font-bold text-emerald-700">@course.Unit</span>
                                                                                        </div>
                                                                                        <div class="ml-3">
                                                                                                <div class="text-sm font-medium text-slate-900">Credit Units</div>
                                                                                                <div class="text-xs text-slate-500">Academic Credits</div>
                                                                                        </div>
                                                                                </div>
                                                                        </td>
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                                                                <div class="flex items-center">
                                                                                        <div class="flex-shrink-0">
                                                                                                <div class="w-10 h-10 bg-gradient-to-br from-amber-100 to-amber-200 rounded-lg flex items-center justify-center border border-amber-300">
                                                                                                        <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                                                                        </svg>
                                                                                                </div>
                                                                                        </div>
                                                                                        <div class="ml-3">
                                                                                                <div class="text-sm font-semibold text-slate-900">@course.ExamTime.ToString("MMM dd, yyyy")</div>
                                                                                                <div class="text-xs text-slate-500">@course.ExamTime.ToString("HH:mm")</div>
                                                                                        </div>
                                                                                </div>
                                                                        </td>
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                                                                <div class="flex items-center">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800 border border-blue-200">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                                </svg>
                                                    @course.SectionsCount Sections
                                            </span>
                                                                                </div>
                                                                        </td>
                                                                        <td class="px-8 py-6 whitespace-nowrap">
                                                                                <div class="flex space-x-2">
                                                                                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 group">
                                                                                                <svg class="w-4 h-4 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                                                                </svg>
                                                                                        </a>
                                                                                        <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-semibold rounded-lg transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 group">
                                                                                                <svg class="w-4 h-4 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                                                                </svg>
                                                                                        </a>
                                                                                        <a asp-controller="Sections" asp-action="CourseSections" asp-route-courseId="@course.Id" class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white font-semibold rounded-lg transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 group">
                                                                                                <svg class="w-4 h-4 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                                                                                </svg>
                                                                                        </a>
                                                                                </div>
                                                                        </td>
                                                                </tr>
                                                        }
                                                </tbody>
                                        </table>
                                </div>
                        }
                        else{
                                <div class="text-center py-20">
                                        <div class="mx-auto h-24 w-24 bg-slate-100 rounded-full flex items-center justify-center mb-6">
                                                <svg class="h-12 w-12 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                                </svg>
                                        </div>
                                        <h3 class="text-xl font-semibold text-slate-900 mb-2">No Courses Found</h3>
                                        <p class="text-slate-600 mb-8 max-w-md mx-auto">Start building your academic curriculum by adding your first course to the system.</p>
                                        <a asp-controller="Courses" asp-action="AddCourse" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                                </svg>
                                                Add First Course </a>
                                </div>
                        }
                </div>
                <!-- Enhanced Pagination -->
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 px-8 py-6 mt-8">
                        <div class="flex items-center justify-between">
                                <div class="flex-1 flex justify-between sm:hidden">
                                        <a href="#" class="relative inline-flex items-center px-6 py-3 border border-slate-300 text-sm font-semibold rounded-xl text-slate-700 bg-white hover:bg-slate-50 transition-all duration-200"> Previous </a>
                                        <a href="#" class="ml-3 relative inline-flex items-center px-6 py-3 border border-slate-300 text-sm font-semibold rounded-xl text-slate-700 bg-white hover:bg-slate-50 transition-all duration-200"> Next </a>
                                </div>
                                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                                        <div>
                                                <p class="text-sm font-medium text-slate-700">
                                                        Showing <span class="font-bold text-slate-900">1</span> to
                                                        <span class="font-bold text-slate-900">@Model.Count</span> of
                                                        <span class="font-bold text-slate-900">@Model.Count</span> results
                                                </p>
                                        </div>
                                        <div>
                                                <nav class="relative z-0 inline-flex rounded-xl shadow-sm -space-x-px" aria-label="Pagination">
                                                        <a href="#" class="relative inline-flex items-center px-4 py-3 rounded-l-xl border border-slate-300 bg-white text-sm font-semibold text-slate-500 hover:bg-slate-50 transition-all duration-200">
                                                                <span class="sr-only">Previous</span>
                                                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                                                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                                                </svg>
                                                        </a>
                                                        <a href="#" class="relative inline-flex items-center px-6 py-3 border border-slate-300 bg-indigo-50 text-sm font-bold text-indigo-600 hover:bg-indigo-100 transition-all duration-200"> 1 </a>
                                                        <a href="#" class="relative inline-flex items-center px-4 py-3 rounded-r-xl border border-slate-300 bg-white text-sm font-semibold text-slate-500 hover:bg-slate-50 transition-all duration-200">
                                                                <span class="sr-only">Next</span>
                                                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                                                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                                                </svg>
                                                        </a>
                                                </nav>
                                        </div>
                                </div>
                        </div>
                </div>
                <!-- Back Navigation -->
                <div class="mt-8 text-center">
                        <a asp-controller="Admin" asp-action="Index" class="inline-flex items-center text-slate-600 hover:text-slate-900 transition-colors group font-medium">
                                <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                                </svg>
                                Back to Admin Dashboard </a>
                </div>
        </div>
</div>